@{
    Layout = null;
    ViewBag.Title = "Forgot User Name | OfficerReports";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/Images/favicon.ico" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link href="~/Content/bootstrap/css/bootstrap-scope.css" rel="stylesheet" />
    <link href="~/Content/kendoui/v2016.1.322/kendo.common.min.css" rel="stylesheet" />
    <link href="~/Content/kendoui/v2016.1.322/kendo.uniform.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: Arial;
        }
        form p {
            margin-bottom:6px;
        }
        form label {
            font-size: 14px;
            font-family: Verdana;
        }
        span.k-tooltip {
            margin-left: 6px;
            vertical-align:top;
        }
        .required-indicator {
            font-family: Verdana;
            display:inline-block; 
            padding-left: 4px; 
            color: Red; 
            font-size: 18px;
        }
        .k-input, input.k-textbox, textarea.k-textbox, input.k-textbox:hover, textarea.k-textbox:hover, .k-textbox>input, .k-multiselect-wrap {
          color: #676767;
        }
        .k-widget.k-tooltip-validation {
          border-color: #ffe79e;
          background-color: #fff4c9;
          color: #635145;
        }
    </style>
    @Html.GetNonSPAThemeFromUrl()
</head>
<body>
    <div class="main-content" style="width:490px;display:none;">
        <div style="width:100%;text-align:center;">
            <div id="theme-logo"></div>
        </div>
        <div>
            <div>
                <div>
                    <h2>Forgot User Name</h2>
                </div>
                <hr style="background-color: #cccccc; border: 0 none; height:1px;">
                <div id="input-form">
                    <div id="msg-not-found" style="display:none;">
                        <p style="color:red; font-weight:bold;">
                        There are no accounts associated with the specified email address in our system.
                        </p>
                    </div>
                    <p style="font-size:13px;"><b>Please enter the email address associated with your account.</b></p>
                    <form>
                        <p>
                            <label for="EmailAddress">Email Address</label><br />
                            <input id="EmailAddress" name="EmailAddress" style="width:200px;" type="email" class="k-textbox" required data-required-msg="Please enter your Email Address" data-email-msg="Please enter a valid Email Address." />
                        </p>
                        <p>
                            <button id="btnSubmit" class="k-button" style="font-family: Verdana;">Submit</button>
                        </p>
                    </form>
                </div>
                <div id="email-sent" style="display:none;">
                    <div>
                        <p>
                        An email message has been sent to <span id="email-sent-address" style="font-weight:bold;"></span> containing your User Name.
                        </p>
                    </div>
                </div>
                <div style="margin-top:20px;width:100%;text-align:center;">
                    <a href="/">Home</a>
                </div>
            </div>
        </div>
        <div class="or-show-custom" style="margin-top:50px;width:100%;text-align:center;font-size:14px; font-style:italic; color:#808080;">
            Powered by OfficerReports
        </div>
    </div>

    <script id="message-template" type="text/x-kendo-template">
        <p>#= message #</p>
        <hr style="background-color: \\#cccccc; border: 0 none; height:1px; margin-top:16px; margin-bottom: 16px;">
        <div style="text-align:center;">
            <button class="ok-button k-button">OK</button>
        </div>
    </script>
    <script id="wait-template" type="text/x-kendo-template">
        <div style="text-align:center;width:170px; height:70px;">
            <div class="k-loading-image"></div>
        </div>
    </script>
    @Html.VersionedJsUrl("/Scripts/app/console.fix.js")
    <script src="~/Scripts/jquery.min.js"></script>
    @Html.VersionedJsUrl("/Scripts/app/internal-misc.js")
    @Html.VersionedJsUrl("/Scripts/kendoui/v2016.1.322/kendo.all.min.js")
    @Html.VersionedJsUrl("/Scripts/app/Account/ForgotUserName.js")
</body>
</html>
