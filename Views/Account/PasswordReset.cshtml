@{
    Layout = null;
    ViewBag.Title = "Password Reset";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/Images/favicon.ico" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge"> 
    <link href="~/Content/bootstrap/css/bootstrap-scope.css" rel="stylesheet" />
    <link href="~/Content/kendoui/v2016.1.322/kendo.common.min.css" rel="stylesheet" />
    <link href="~/Content/kendoui/v2016.1.322/kendo.uniform.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: Arial;
        }
        form p {
            margin-bottom:6px;
        }
        form label {
            font-size: 14px;
            font-family: Verdana;
        }
        span.k-tooltip {
            margin-left: 6px;
            vertical-align:top;
        }
        .required-indicator {
            font-family: Verdana;
            display:inline-block; 
            padding-left: 4px; 
            color: Red; 
            font-size: 18px;
        }
        .k-input, input.k-textbox, textarea.k-textbox, input.k-textbox:hover, textarea.k-textbox:hover, .k-textbox>input, .k-multiselect-wrap {
          color: #676767;
        }
        .k-widget.k-tooltip-validation {
          border-color: #ffe79e;
          background-color: #fff4c9;
          color: #635145;
        }
    </style>
    @Html.GetNonSPAThemeFromUrl()
</head>
<body>
    <div class="main-content" style="width:490px;display:none;">
        <div style="width:100%;text-align:center;">
            <div id="theme-logo"></div>
        </div>
        <div>
            <div>
                <div>
                    <h2>Password Reset</h2>
                </div>
                <hr style="background-color: #cccccc; border: 0 none; height:1px;">
                <div id="input-form">
                    <p><b>Enter your new password below.</b></p>
                    <form>
                        <p>
                            <label for="Password">New Password</label><br />
                            <input id="Password" name="Password" style="width:150px;" type="password" class="k-textbox" required data-required-msg="Please enter your New Password" /> <br />
                        
                        <span>Passwords must contain a minimum of 8 characters, at least one uppercase letter, one number, and one special character (without any spaces).</span> 

                        </p>
                        <p>
                            <label for="PasswordConfirm">Confirm New Password</label><br />
                            <input id="PasswordConfirm" name="PasswordConfirm" style="width:150px;" type="password" class="k-textbox" required data-required-msg="Please confirm your New Password" /> <br />

                        <span>Passwords must contain a minimum of 8 characters, at least one uppercase letter, one number, and one special character (without any spaces).</span> 

                        </p>
                        <p>
                            <button id="btnSubmit" class="k-button" style="font-family: Verdana;">Submit</button>
                        </p>
                    </form>
                </div>
                <div id="password-changed" style="display:none;">
                    <div>
                        <p>
                        Your password has been changed.
                        </p>
                        <div class="bootstrap-scope" style="width:100%;text-align:center;margin-top:30px;">
                            <a href='@Url.Action("Login", "Account")' class="btn btn-primary btn-lg">Enter Main Site</a>
                            <a href='@Url.Action("OfficerLogin", "Account")' class="btn btn-primary btn-lg">Enter Officer Portal</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="or-show-custom" style="margin-top:50px;width:100%;text-align:center;font-size:14px; font-style:italic; color:#808080;">
            Powered by OfficerReports
        </div>
    </div>

    <script id="message-template" type="text/x-kendo-template">
        <p>#= message #</p>
        <hr style="background-color: \\#cccccc; border: 0 none; height:1px; margin-top:16px; margin-bottom: 16px;">
        <div style="text-align:center;">
            <button class="ok-button k-button">OK</button>
        </div>
    </script>
    <script id="wait-template" type="text/x-kendo-template">
        <div style="text-align:center;width:170px; height:70px;">
            <div class="k-loading-image"></div>
        </div>
    </script>
    @Html.VersionedJsUrl("/Scripts/app/console.fix.js")
    <script src="~/Scripts/jquery.min.js"></script>
    @Html.VersionedJsUrl("/Scripts/app/internal-misc.js")
    @Html.VersionedJsUrl("/Scripts/kendoui/v2016.1.322/kendo.all.min.js")
    <script type="text/javascript">
        var resetToken = '@ViewBag.ResetToken';
        var userId = @ViewBag.UserId;
    </script>
    @Html.VersionedJsUrl("/Scripts/app/Account/PasswordReset.js")
</body>
</html>