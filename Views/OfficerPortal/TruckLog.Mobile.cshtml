@model ORWeb.Models.OfficerLoginModel
@{
    Layout = "~/Views/Shared/_LayoutPortal.cshtml";
    ViewBag.Title = "Truck Log";
}

<div id="forms" data-role="view" data-title="Truck Log" data-use-native-scrolling="true">
    <header data-role="header">
        <div data-role="navbar">
            <a data-align="right" data-icon="mymenuicon" data-role="button" href="#report-menu">Report Menu</a>
        </div>
    </header>
    <div id="logo" style="text-align:center; margin-top:20px;">
        <img src="~/Images/logo.png" width="310" height="65">
    </div>
    <h2>Truck Log</h2>

    <ul data-role="listview" data-style="inset" data-type="group">
        <li>
            <ul>
                <li>Officer: <span class="list-value">@Model.FirstName @Model.LastName</span></li>
                <li>Client: <span class="list-value">@Model.ClientName</span></li>
                <li>Site: <span class="list-value">@Model.SiteName</span></li>
            </ul>
        </li>
    </ul>

    <form>
        <ul data-role="listview" data-style="inset">
            <li class="report-separator">
                Truck Check-In
            </li>
            <li>
                <label for="company">Company<span class="required-indicator">*</span>
                <input id="company" name="company" type="text" maxlength="50" class="k-input k-textbox" data-bind="value: report.company"  required data-required-msg="Please enter the Company name."/>
                </label>
            </li>
            <li>
                <label for="in-driver">Driver<span class="required-indicator">*</span>
                <input id="in-driver" name="in-driver" type="text" maxlength="50" class="k-input k-textbox" data-bind="value: report.inDriver"  required data-required-msg="Please enter the Driver name."/>
                </label>
            </li>
            <li>
                <label for="tractor_number">Tractor #<span class="required-indicator">*</span>
                <input id="tractor_number" name="tractor_number" maxlength="50" type="text" class="k-input k-textbox" data-bind="value: report.tractorNumber"  required data-required-msg="Please enter the Tractor #." />
                </label>
            </li>
            <li>
                <label for="trailer_number">Trailer # In
                <input id="trailer_number" type="text" maxlength="50" class="k-input k-textbox" data-bind="value: report.inTrailerNumber" />
                </label>
            </li>
            <li>
                <label for="seal_number">Seal #
                <input id="seal_number" type="text" maxlength="50" class="k-input k-textbox" data-bind="value: report.inSealNumber" />
                </label>
            </li>
            <li>
                <label for="notes">Notes
                <textarea id="notes" maxlength="1000" class="k-input k-textbox" data-bind="value: report.inNotes"></textarea>
                </label>
            </li>			
            <li class="report-separator">
                Photos, Videos, Audio
            </li>
            <li>
                <div style="margin-bottom:6px;"><button id="btn-add-photo" class="k-button" type="button" style="width:140px;font-weight:bold; font-family: Verdana;">+ Add Photo, Video, or Audio</button></div>
                <div id="upload-progress-wrapper" style="width:100%;"></div>
                <div style="height: 0;width:0; overflow:hidden;"><input name="fileUpload" id="fileUpload" type="file" style="width:0;height:0;" /></div>
                <div id="photo-list" style="margin-top:8px;"></div>
                <div id="media-list" style="margin-top:8px;"></div>
                <div id="attachment-list" style="margin-top:8px;"></div>
            </li>
            <li>
                <ul class="submit-buttons">
                    <li><a data-role="button" data-bind="click: submit">Submit</a></li>
                </ul>
                <ul id="clear-form-ul" class="submit-buttons" style="display:none;">
                    <li><br /><a data-role="button" data-bind="click: clearForm">Clear Form</a></li>
                </ul>
            </li>
        </ul>
    </form>
    <br /><br />
</div>

@section Head {
    <link href="~/Content/toastmessage/css/jquery.toastmessage.css" rel="stylesheet" />
}

@section Scripts {
    <script type="text/javascript" src="/Scripts/jquery.toastmessage.js"></script>
    <script type="text/javascript">
        var clientSiteId = @Model.ClientSiteId;
        var userId = @Model.UserId;
    </script>
    @Html.VersionedJsUrl("/Scripts/app/OfficerPortal/TruckLog.Mobile.js")
}